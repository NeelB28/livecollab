# Server Configuration
NODE_ENV=development
PORT=3002
SERVER_PORT=3002

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=application/pdf

# Socket.IO Configuration
SOCKET_TRANSPORTS=websocket,polling
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Database Configuration (optional - for persistence)
# DATABASE_URL=postgresql://username:password@localhost:5432/livecollab
# MONGODB_URI=mongodb://localhost:27017/livecollab

# Redis Configuration (optional - for session storage)
# REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Serving
STATIC_FILES_URL=http://localhost:3002/uploads

# Logging
LOG_LEVEL=info 